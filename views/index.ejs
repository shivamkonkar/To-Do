<%-include("./partials/header")-%>

<body>
  <div class="container mx-auto text-center ">
    <h1 id="date"><%= date %></h1>


    <form action="/" method="post">
      <ul>
      
        <% for(let i = 0 ; i < newitem.length ; i++){ %>
          <div>
            <div class="inline-flex">
              <input type="checkbox" name="" id="">
              <li><%= newitem[i] %></li>
            </div>
          </div>
        <% } %>
        
      </ul>
        <textarea id="code"  class= "bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" cols="86" rows ="20" name="code"></textarea>
        <input type="submit" formaction="/add" value="+" class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">
        <input type="submit" formaction="/removeAll" value="-" class="text-white bg-red-500 border-0 py-2 px-6 focus:outline-none hover:bg-red-600 rounded text-lg">
    </form>
    
  </div>
</body>
</html>